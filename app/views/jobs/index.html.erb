<div class="container">
  <div class="row">
    <h1 class="text-center lead">Open Jobs: <%= params[:search] %></h1>
    <!-- <br> -->
    <div id="paginator-jobs-top" class="text-center">
      <%= paginate @jobs, theme: 'twitter-bootstrap-3',
                          param_name: 'jobs' %>
    </div>

    <table class="table table-striped table-hover table-bordered text-center">
      <thead class="lead">
        <td>Title</td>
        <td>Description</td>
        <td>Zip code</td>
        <td>User</td>
        <td>Updated</td>
      </thead>
      <tbody>
        <% @jobs.each do |job| %>
          <tr>
            <td><%= link_to job.title, job, class: 'unstyled-link' %></td>
            <td><%= link_to truncate(job.description, length: 100), job, class: 'unstyled-link' %></td>
            <td><%= job.zip_code %></td>
            <td><%= link_to job.user.fullname, job.user, class: 'unstyled-link' %></td>
            <td><%= time_ago_in_words(job.updated_at)  %> ago</td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div id="paginator-jobs-bottom" class="text-center">
      <%= paginate @jobs, theme: 'twitter-bootstrap-3',
                          param_name: 'jobs' %>
    </div>
  </div>
</div>