<div class="row">
	<%= simple_form_for [@uploadable, @upload], html: { multipart: true, class: 'dropzone' } do |f|  %>
	  <% if params[:status] == "before" %>
	  	<%= f.input :before, as: :hidden, input_html: { value: true } %>
	  <% elsif params[:status] == "after" %>		  	
	  	<%= f.input :after, as: :hidden, input_html: { value: true } %>
  	<% end %>

	  <div class="fallback">
	  	<% if params[:status] == "before" %>
		  	<%= f.input :before, as: :hidden, input_html: { value: true } %>
		  <% elsif params[:status] == "after" %>		  	
		  	<%= f.input :after, as: :hidden, input_html: { value: true } %>
	  	<% end %>
	    <%= f.file_field :image %><br>
	    <%= f.submit "Upload" %>
	  </div>
	<% end %>
	<br>
  <div class="job_return_links">
    <ul class="list-inline">
      <li><%= link_to 'Back to profile', current_contractor || current_user, class: 'btn btn-lg btn-warning' %></li>
    </ul>
  </div>
</div>