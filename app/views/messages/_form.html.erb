<%= simple_form_for [@user, @message], url: user_messages_path, method: :post, wrapper: :vertical_form do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :topic, input_html: { maxlength: 50 } %>
    <%= f.input :body, input_html: { maxlength: 2000 } %>
  </div>
  <div class="row">
    <%= f.button :submit, 'Send message', class: 'btn btn-success' %>
  </div>
<% end %>
