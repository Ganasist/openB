<h3 class="text-center lead">INBOX : OUTBOX : TRASH</h3>
<br><br>

<table class="table table-hover">
  <thead>
    <th width="15%">
      Last Message Sent
    </th>
    <th width="10%">
      Sender
    </th>
    <th width="20%">
      Subject
    </th>
    <th width="35%">
      Message
    </th>
    <th width="20%">
      Actions
    </th>
  </thead>
  <% @messages.each do |message| %>
      <tr data-link="<%= message_path(message) %>">
        <td>
          <%= message.updated_at.strftime('%a %b %e %l:%M%p %Y') %>
        </td>
        <td>
          <%= message.sent_messageable.fullname %>
        </td>
        <td>
          <%= message.topic %>
        </td>
        <td>
          <%= message.body %>
        </td>
        <td>
          INSERT ACTIONS
        </td>
      </tr>
  <% end %>
</table>
