<% @cats = member.categories %>
	<span class="text-center">
		<%= render partial: 'layouts/pic', collection: member.uploads, as: :upload, locals: { owner: member } %>
	</span>
	<div class="text-center">
		<% if member.uploads.count >= 3 %>
			<%= link_to 'Upload a profile pic', new_polymorphic_url([member, Upload]),
																						 id: "#{ member.class.name + "-" + member.id.to_s }-upload_pic_button", 
																					class: 'btn btn-lg btn-success disabled' if (current_user == member || current_contractor == member) %>
		<% else %>
			<%= link_to 'Upload a profile pic', new_polymorphic_url([member, Upload]),
																				 id: "#{ member.class.name + "-" + member.id.to_s  }-upload_pic_button",
																			class: 'btn btn-lg btn-success' if (current_user == member || current_contractor == member) %>
		<% end %>		
		<hr>

	</div>
	<%= @incomplete_profile_message.html_safe if @incomplete_profile_message.present? %>
	<address class="lead">
		<% if member.try(:company_name) %>
		  <div class="text-center"><strong><%= member.company_name %></strong></div><br>
	  <% end %>
	  <% if member.name.present? %>
		  <%= member.name %><br>
	  <% end %>
	  <% if member.address.present? %>
		  <%= member.address %><br>
	  <% end %>
	  <% if member.city.present? && member.state.present? %>
		  <%= "#{ member.city }, #{ member.state } #{ member.zip_code }" %><br>
	  <% elsif member.city.present? %>
	  	<%= "#{ member.city } #{ member.zip_code }" %><br>
	  <% else %>
	  	<%= member.zip_code %><br>
	  <% end %>
	  <% if member.phone.present? %>
		  <%= member.phone.phony_formatted(normalize: :US, format: :international, spaces: '-') %><br>
	  <% end %>
	  <%= member.email if member.email.present? %><br>
	</address>
	<hr>
	<% if member.categories.size > 0 %>
		<h4 class="text-center">
			<%= member.contractor? ? 'Services Offered' : 'Services Needed' %>
		</h4>
		<% @cats.each do |cat| %>
      <ul>
      	<h2>
      		<li class="services label label-<%= %w(default primary success info warning danger).sample %>">
            <%= cat %>
          </li>
        </h2>
      </ul>
    <% end %>			
	<% end %>