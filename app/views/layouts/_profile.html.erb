<% @cats = member.categories %>
<div class="row">
	<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
		<span class="text-center">
		<%= image_tag member.image(:original), class: 'img-rounded' %>
		</span>

		<% if member.image.processing? %>
			<h4 class="text-success">
				Image is processing.<br> Refresh page in a few seconds.
			</h4>
		<% end %>	

		<hr>
		<% if member.contractor? %>
			<h3 class="lead text-center"><%= member.company_name if member.company_name? %></h3>
			<p>Contractor: <%= member.name if member.name %></p>				
		<% else %>
			<p>User: <%= member.name if member.name %></p>
		<% end %>
		<p>Email: <%= member.email if member.email %></p>
		<p>Zip code: <%= member.zip_code if member.zip_code %></p>
		<hr>
		<% if member.categories.size > 0 %>
			<h4 class="text-center"><%= member.contractor? ? 'Services Offered' : 'Services Needed' %></h4><br>
			<% @cats.in_groups_of((@cats.size/2.0).ceil, false).each do |cats| %>
					<% cats.each do |cat| %>
	          <ul class="list-unstyled lead col-xs-6">
	          	<li class="text-center"><%= cat %></li>
	          </ul>
	        <% end %>
			<% end %>				
		<% end %>
	</div>
	<div>
		<h3 class="lead"><%= member.bio if member.contractor? && member.bio? %></h3>
	</div>
</div>