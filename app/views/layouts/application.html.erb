<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Openbid" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Openbid" %>">
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="wrap">
        <header>
          <%= render 'layouts/navigation' %>
        </header>
        
      <div class="container">
        <%= render 'layouts/messages' %>
        <%#= bootstrap_flash %>
        <%= yield %>
      </div>
    </div>
    <%= render 'layouts/footer' %>
    <!-- Javascripts -->
    <%= javascript_include_tag "application" %>
    <%= yield :scripts %>
  </body>
</html>