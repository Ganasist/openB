<h4 class="text-center">
  Average reviews <%= member.user? ? 'given' : 'received' %>
                 (<%= pluralize(member.reviews.count, 'job') %>)
</h4>
<h4 class="lead">
  <strong>Quality:</strong>
  <%= member.review_average_each(:quality) %>/10
  <br>
  <strong>Cost:</strong>
  <%= member.review_average_each(:cost) %>/10
  <br>
  <strong>Timeliness:</strong>
  <%= member.review_average_each(:timeliness) %>/10
  <br>
  <strong>Professionalism:</strong>
  <%= member.review_average_each(:professionalism) %>/10
  <br>
  <strong>Recommendation:</strong>
  <%= member.review_average_each(:recommendation) %>/10
</h4>
