<% if (params[:controller] == 'jobs') || (params[:controller] == 'examples') %>	
	<span id="image-<%= upload.id %>">
		<%= image_submit_tag upload.image.url(:medium), 
												 class: 'img-rounded img-responsive', 
												  data: { toggle: 'modal', 
												  				target: "#myModal-#{ upload.id }" } %>
    <%= link_to polymorphic_url([upload.uploadable, upload]), 
    						method: :delete, 
    						remote: true do %>
    	<br>
      <%= fa_icon 'minus-square lg', 
      						title: 'Delete', 
      						class: 'member_pic_delete delete-job-post pull-right' %>
	  <% end if (current_user || current_contractor) == owner %>
	</span>
	<hr>
<% else %>
	<span id="image-<%= upload.id %>">
		<%= image_tag upload.image.url(:medium), 
									class: 'img-rounded img-responsive' %>
		<%= link_to polymorphic_url([upload.uploadable, upload]), 
								method: :delete, 
								remote: true do %>
	        <br>
	        <%= fa_icon 'minus-square lg', 
	        						title: 'Delete', 
	        						class: 'member_pic_delete delete-job-post pull-right' %>
	  <% end if (current_user || current_contractor) == owner %>
	</span>
	<hr>
<% end %>