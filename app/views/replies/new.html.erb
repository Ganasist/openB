<div class="row text-center  col-lg-6 col-lg-offset-3 col-md-6 col-xs-12">
  <h2 class="text-center text-lead">Send Message to XYZ</h2>
  <div class="authform">
    <%= simple_form_for @message, url: message_reply_path, method: :post, wrapper: :vertical_form do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :topic, input_html: { maxlength: 50 } %>
        <%= f.input :body, input_html: { maxlength: 2000 } %>
      </div>
      <div class="row">
        <%= f.button :submit, 'Send message', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
