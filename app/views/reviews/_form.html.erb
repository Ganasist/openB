<div class="row authform">
  <%= simple_form_for [@job, @review], html: { autocomplete: 'off' } do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">

      <%= f.input :description, as: :text,
                             label: 'Comments (optional)',
                       placeholder: 'Maximum 2000 characters.',
                        input_html: { rows: '7', maxlength: 2000 } %>
    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, 'Submit review', class: 'btn btn-success' %>
    </div>
  <% end %>
  <br>
  <%= render 'layouts/back_to_profile' %>
</div>
