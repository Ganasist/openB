<div class="row authform">
  <%= simple_form_for [@job, @review], html: { autocomplete: 'off' } do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :description %>
    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, 'Submit review', class: 'btn btn-success' %>
    </div>
  <% end %>
  <br>
  <%= render 'layouts/back_to_profile' %>
</div>
