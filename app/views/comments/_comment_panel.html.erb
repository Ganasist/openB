<div class="panel panel-default" id="comment-<%= comment.id %>">
  <div class="panel-heading">
    <h3 class="panel-title">
      From: <%= link_to comment.commenterable.fullname, comment.commenterable, class: 'unstyled-link text-primary' %> |
      To: <%= link_to comment.commentable.fullname, comment.commentable, class: 'unstyled-link text-primary' %> |
      Subject: <%= comment.subject %>
      <% if (current_user || current_contractor) == comment.commenterable %>
        <ul class="list-inline pull-right">
          <li>
            <%= link_to edit_polymorphic_url([comment.commentable, comment]) do %>
              <%= fa_icon 'edit lg', title: 'Edit' %>
            <% end %>
          </li>
          <li>
            <%= link_to polymorphic_url([comment.commenterable, comment]), method: :delete,
                                                                           remote: true,
                                                                             data: { confirm: 'Are you sure you want to delete this message?' } do %>
              <%= fa_icon 'minus-square-o lg', title: 'Delete',
                                               class: 'delete-comment-post' %>
            <% end %>
          </li>
        </ul>
      <% end %>
    </h3>
  </div>
    <div class="panel-body">
      <%= comment.body %>
    </div>

    <div class="panel-footer text-center">
      <%= "Updated #{ time_ago_in_words(comment.updated_at) } ago " %>
    </div>
</div>
