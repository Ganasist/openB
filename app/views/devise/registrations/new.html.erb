<% if request.fullpath.split('/')[1] == 'users' %>
  <div class="text-center">
    <%= link_to new_contractor_registration_path, class: 'btn btn-warning' do %>
      <%= fa_icon 'wrench', title: 'Contractor' %> Contractor sign-up   
    <% end %>
  </div>
<% else %>
  <div class="text-center">
    <%= link_to new_user_registration_path, class: 'btn btn-warning' do %>
      <%= fa_icon 'user', title: 'User' %> User sign-up
    <% end %>
  </div>
<% end %>

<div class="authform">
  <%= simple_form_for resource, as: resource_name, 
  														 url: registration_path(resource_name) do |f| %>
    
    <h3><%= resource_name.capitalize %> sign-up</h3>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>
      <%= f.input :password, required: true, 
                                 hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
      <%= f.input :password_confirmation, required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Sign up', class: 'submit' %>
    </div>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>