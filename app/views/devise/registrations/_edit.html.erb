<div class="authform">
  <%= simple_form_for resource, as: resource_name, 
                               url: registration_path(resource) do |f| %>
    
    <h3>Profile</h3>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="text-center">
        <p>Image (.jpeg, .png, .gif < 2 megabytes)</p>
        <% if resource.image? %>
          <%= image_tag(resource.image.url(:original)).html_safe %>
          <br><br>
          <%= f.input :delete_image, as: :boolean, 
                                  label: false, 
                           inline_label: 'Delete this photo', 
                           wrapper_html: { class: 'form-inline text-center' } %><br>
        <% end %>
        
        <%= f.file_field :image, input_html: { class: 'text-center' } %>
        <h4>or</h4>
        <%= f.input :image_remote_url, label: 'Enter an image URL' %>
      </div>

    <%= f.input :name, required: true, autofocus: true %>
    <%= f.input :email, required: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
    <%= f.input :password_confirmation, required: false %>
    <%= f.input :current_password, hint: 'Enter your current password to confirm your changes', required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Update', class: 'user_submit' %>
  </div>    
  <% end %>
  <%= link_to 'Back', :back, class: 'btn-sm submit' %>
</div>
