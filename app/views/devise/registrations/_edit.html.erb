<div class="authform_large">
  <%= simple_form_for resource, as: resource_name, 
                               url: registration_path(resource) do |f| %>
    
    <h3>Profile</h3>
    <%= f.error_notification %>
     <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

  <div class="row">
    <div class="form-inputs col-md-6 col-sm-6">
      <div class="text-center">
        <p>Upload profile image under 2 megabytes</p>
          <%= image_tag(resource.image.url(:original)).html_safe %>
          <br><br>
        <% if resource.image? %>
          <%= f.input :delete_image, as: :boolean, 
                                  label: false, 
                           inline_label: 'Delete image', 
                           wrapper_html: { class: 'form-inline text-center' } %><br>
        <% end %>
        
        <%= f.file_field :image, input_html: { class: 'text-center' } %>
        <h4>or</h4>
        <%= f.input :image_remote_url, label: 'Enter an image URL' %>
      </div>    
    </div>
    <div class="form-inputs col-md-6 col-sm-6">

      <%= f.input :name, required: true, 
                      placeholder: 'Required' %>
      <%= f.input :email, required: true, 
                       placeholder: 'Required', 
                        input_html: { id: 'current_email' } %>
      <%= f.input :zip_code, placeholder: 'Enter a valid zip code' %>

      <%= f.input :bio, as: :text %>

      <%= f.input :password, label: 'New Password (optional)', 
                      autocomplete: 'off', 
                       placeholder: 'Enter new password', 
                          required: false, 
                        input_html: { id: 'new_password' } %>
      <span></span>
      <%= f.input :password_confirmation, label: 'New password confirmation', 
                                       required: false,                                    
                                   wrapper_html: { style: 'display: none', 
                                                      id: 'new_password_confirmation'}  %>
      <%= f.input :current_password, placeholder: 'Enter current password to confirm updates', 
                                    wrapper_html: { style: 'display: none', 
                                                       id: 'current_password'} %>
    </div>
  </div>
  <div class="row center-block">
    <div class="form-actions-submit">
      <%= f.button :submit, 'Update Profile', class: 'user_submit' %>
    </div>
  </div>   
  <% end %>
  <div class="row">
    <div class="form-actions-submit">
      <%= link_to 'Back', resource, class: 'btn-sm submit' %>
    </div>
  </div>
</div>