<div class="authform">
  <%= simple_form_for resource, as: resource_name, 
                               url: registration_path(resource) do |f| %>
    
    <h3>Profile</h3>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="text-center">
        <p>Upload profile image under 2 megabytes</p>
          <%= image_tag(resource.image.url(:original)).html_safe %>
          <br><br>
        <% if resource.image? %>
          <%= f.input :delete_image, as: :boolean, 
                                  label: false, 
                           inline_label: 'Delete image', 
                           wrapper_html: { class: 'form-inline text-center' } %><br>
        <% end %>
        
        <%= f.file_field :image, input_html: { class: 'text-center' } %>
        <h4>or</h4>
        <%= f.input :image_remote_url, label: 'Enter an image URL' %>
      </div>

    <%= f.input :name, required: true %>
    <%= f.input :email, required: true, input_html: { id: 'current_email' } %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, label: 'New Password', autocomplete: 'off', hint: "Leave blank if you don't need to change it", required: false, input_html: { id: 'new_password' } %>
    <span></span>
    <%= f.input :password_confirmation, label: 'New password confirmation', required: false, wrapper_html: { style: 'display: none', id: 'new_password_confirmation'}  %>
    <%= f.input :current_password, hint: 'Enter current password to confirm updates', wrapper_html: { style: 'display: none', id: 'current_password'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Update', class: 'user_submit' %>
  </div>    
  <% end %>
  <%= link_to 'Back', resource, class: 'btn-sm submit' %>
</div>
