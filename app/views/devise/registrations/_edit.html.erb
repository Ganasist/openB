<% @cats = Contractor.categories %>
<div class="authform_large">
  <%= simple_form_for resource, as: resource_name, 
                               url: registration_path(resource),
                           wrapper: :vertical_form, 
                              html: { multipart: true, 
                                   autocomplete: 'off' },
                  wrapper_mappings: { check_boxes: :vertical_radio_and_checkboxes,
                                             file: :horizontal_file_input } do |f| %>
    
    <h3>Profile</h3>
    <%= f.error_notification %>
     <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

  <div class="row">
    <div class="form-inputs col-md-6 col-sm-6">
        <%= f.input :name, required: true %>
        <%= f.input :company_name, required: true, 
                                placeholder: 'Enter your company name' if contractor_signed_in? %>
        <%= f.input :email, required: true, 
                         placeholder: 'Required', 
                          input_html: { id: 'current_email' } %>
        <%= f.input :phone, as: :string,
                   placeholder: 'Enter a valid full phone number',
                    input_html: { value: resource.try(:phone) ? 
                                          resource.phone.phony_formatted(normalize: :US, 
                                                                            format: :international,
                                                                            spaces: '-') : '' } %>
        <%= f.input :address, placeholder: 'Enter your address' %>
        <%= f.input :city, placeholder: 'Enter your city' %>
        <ul class="list-inline text-center">
          <li>
            <%= f.select :state, options_for_select(us_states, resource.try(:state)), include_blank: 'Select a State' %>
          </li>
          <li>
            <%= f.input :zip_code, as: :string,
                             required: true,
                           input_html: { min_max: 5, 
                                              id: 'form_zip_code' }, 
                         wrapper_html: { id: 'label_zip_code' } %>
          </li>
        </ul>      
        <%= f.input :bio, as: :text,
                    required: true,
                       label: 'Company Description',
                 placeholder: 'Enter brief description about your services',
                  input_html: { rows: '7', maxlength: 500 } if contractor_signed_in? %>
        
        <hr>  
          <p class="text-center lead">Select categories of interest</p>
          <% @cats.in_groups_of((@cats.size/2.0).ceil, false).each do |cats| %>
            <ul class="list-unstyled col-xs-6">
              <li>
                <%= f.input :categories, as: :check_boxes,
                                      label: false,
                                 collection: cats %>
              </li>
            </ul> 
          <% end %>
    </div>

    <div class="form-inputs col-md-6 col-sm-6">
      

      <div class="text-center">
          <%= image_tag(resource.image.url(:medium)).html_safe %>
          <p>Upload a profile image or icon</p>
          <br><br>
        <% if resource.image? %>
          <%= f.input :delete_image, as: :boolean, 
                                  label: false, 
                           inline_label: 'Delete image' %><br>
        <% end %>

        <%= f.file_field :image %>
        <h4>or</h4>
        <%= f.input :image_remote_url, label: 'Paste an image URL', input_html: { autocomplete: 'off' } %>
      </div>
      <hr>
      <%= f.input :password, label: 'New Password (optional)', 
                      autocomplete: 'off', 
                       placeholder: 'Enter new password', 
                          required: false, 
                        input_html: { id: 'new_password', autocomplete: 'off' } %>
      <%= f.input :password_confirmation, label: 'New password confirmation', 
                                       required: false, 
                                     input_html: { autocomplete: 'off' },                                    
                                   wrapper_html: { style: 'display: none', 
                                                      id: 'new_password_confirmation'}  %>
      <%= f.input :current_password, placeholder: 'Enter current password to confirm updates', 
                                      input_html: { autocomplete: 'off' },
                                    wrapper_html: { style: 'display: none', 
                                                       id: 'current_password'} %>
    </div>
  </div>

  <div class="row center-block">
    <div class="form-actions-submit">
      <%= f.button :submit, 'Update Profile', class: 'user_submit' %>
    </div>
  </div>   
  <% end %>
  <div class="row">
    <div class="form-actions-submit">
      <%= link_to 'Back', resource, class: 'btn-sm submit' %>
    </div>
  </div>
</div>