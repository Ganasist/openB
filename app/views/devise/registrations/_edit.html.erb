<div class="authform">
  <%= simple_form_for resource, as: resource_name, 
                               url: registration_path(resource) do |f| %>
    
    <h3>Profile edit</h3>
    <%= f.error_notification %>

    <div class="form-inputs">

    <%= f.input :name, required: true, autofocus: true %>
    <%= f.input :email, required: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
    <%= f.input :password_confirmation, required: false %>
    <%= f.input :current_password, hint: 'Enter your current password to confirm your changes', required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Update', class: 'user_submit' %>
  </div>    
  <% end %>
  <%= link_to 'Back', :back, class: 'btn-sm submit' %>
</div>
