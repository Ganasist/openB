<div class="panel panel-default" id="<%= example.id %>">
  <div class="panel-heading">
    <h3 class="panel-title">
      <p>
        <% if current_contractor == example.contractor %>
          <%= link_to example, method: :delete,
                               remote: true do %>
            <%= fa_icon 'minus-square 2x', title: 'Delete',
                                           class: 'delete-job-post pull-right' %>
          <% end %>
          <%= link_to edit_contractor_example_path(example.contractor, example) do %>
            <%= fa_icon 'edit 2x', title: 'Edit', class: 'pull-right' %>
          <% end %>
        <% end %>
      </p>
      <ul class="list-inline categories">
        <% example.categories.each do |c| %>
          <li>
            <span class="label label-<%= %w(default primary success info warning danger).sample %>">
              <%= c %>
            </span>
          </li>
        <% end %>
      </ul>
    </h3>
  </div>  
    <div class="panel-body">     
      <div class="col-xs-12 col-md-3 text-center">
      <p class="lead">Before</p>
      <% if example.before_uploads.count > 0 %>
        <%= render partial: 'layouts/pic', 
                collection: example.before_uploads, 
                        as: :upload, 
                    locals: { owner: example.contractor } %>
      <% end %>

      <%= render partial: 'layouts/pic_upload_button', 
                  locals: { item: example, 
                      item_owner: example.contractor, 
                  current_member: current_user || current_contractor,
               item_upload_count: example.before_uploads.count,
                     item_status: 'before' } %>

        <!-- <hr class="visible-xs visible-sm"> -->
      </div>
      <div  class="col-xs-12 col-md-6">
      <hr class="visible-xs visible-sm">
        <%= link_to contractor_example_path(example.contractor, example), 
                    class: 'unstyled-link' do %>
          <p class="lead text-center">
            <strong>
              <%= example.title %>
            </strong>
          </p>
          <!-- <hr> -->
          <%= (request.fullpath).include?('examples') ? 
                                  example.description : 
                                  truncate(example.description, length: 200) %>
        <% end %> 

       <hr class="visible-xs visible-sm">
      </div>
      <div class="col-xs-12 col-md-3 text-center">
        <p class="text-center lead">After</p>
          <% if example.after_uploads.count > 0 %>
            <%= render partial: 'layouts/pic', 
                    collection: example.after_uploads, 
                            as: :upload, 
                        locals: { owner: example.contractor } %>
          <% end %>

          <%= render partial: 'layouts/pic_upload_button', 
                      locals: { item: example, 
                          item_owner: example.contractor, 
                      current_member: current_user || current_contractor,
                   item_upload_count: example.after_uploads.count,
                         item_status: 'after' } %>

        <hr class="visible-xs visible-sm">
      </div>
    </div>

    <div class="panel-footer">
      <%= "Posted #{ time_ago_in_words(example.created_at) } ago" %> |
      <%= link_to "By #{ example.contractor.company_name }", example.contractor, class: 'unstyled-link' %>
    </div>
</div>