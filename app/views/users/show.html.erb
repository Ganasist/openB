<%= render partial: 'layouts/comment_modal', 
              locals: { commentable: @user } %>

<div class="row">
	<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
		<%= render partial: 'layouts/profile_sidebar', locals: { member: @user } %>
	</div>
	<div class="col-lg-8 col-md-8 col-sm-6 col-xs-12">
		<hr class="visible-xs">
    <% if current_user == @user %>
  		<h3 class="lead text-center">
  			<%= link_to 'Post a New Job', new_job_path, class: 'btn btn-lg btn-success' if current_user == @user %>
  		</h3>

  		<%= render 'layouts/nav_pills' %>

      <div class="tab-content">
        <%= render partial: 'layouts/job_tab_pane', locals: { no_jobs: 'You have not posted any jobs' } %>

        <%= render 'layouts/comment_tab_pane' %>
      </div>
    <% else %>
      <% if @jobs.present? %>
        <h2 class="text-center lead">Job posts</h2>
        <%= render 'layouts/jobs' %>
      <% else %>
        <br>
        <h4 class="text-center">This user hasn't posted any jobs</h4>
      <% end %>
    <% end %>
	</div>	
</div>