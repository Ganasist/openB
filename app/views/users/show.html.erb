<div class="row">
	<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
		<%= render partial: 'layouts/profile_sidebar', locals: { member: @user } %>
	</div>
	<div class="col-lg-8 col-md-8 col-sm-6 col-xs-12">

		<hr class="visible-xs">

		<h3 class="lead text-center">
			<%= link_to 'Post a New Job', new_job_path, 
																		class: 'btn btn-lg btn-success' if current_user == @user %>
		</h3>

		<hr class="visible-xs">

		<% @jobs.each do |j| %>
			<div class="panel panel-info" id="<%= j.id %>">
			  <div class="panel-heading">
			    <h3 class="panel-title">
			    	<p>
		    		<%= link_to j.title, j %>
			    	<% if current_user == @user %>
		    				<%= link_to j, method: :delete,
		    									 remote: true, 
			    									 data: { confirm: "Are you sure you want to delete this post?" } do %>
							  	<%= fa_icon 'minus-square 2x', title: 'Delete',
							  																 class: 'delete-job-post pull-right' %>
						  	<% end %>
						  	<%= link_to edit_job_path(j) do %>
							  	<%= fa_icon 'edit 2x', title: 'Edit', class: 'pull-right' %>
						  	<% end %>		
				  	<% end %>
				  	</p>
				  	<p>
				  		<ul class="list-inline">
				  			<% j.categories.each do |c| %>
						  		<li>
						  			<span class="label label-<%= %w(default primary success info warning danger).sample %>">
						  				<%= c %>
						  			</span>
						  		</li>
					  		<% end %>
				  		</ul>
				  	</p>
	  			</h3>
			  </div>
			  <%= link_to j, class: 'unstyled-description' do %>
				  <div class="panel-body">
				  	<div class="col-xs-4">
						      <%= image_tag j.image(:thumb), class: 'img-rounded' %>
						    <% if j.image.processing? %>
						      <h4 class="text-center lead">
						        Image is processing.<br> Refresh page in a few seconds.
						     	</h4>
						    <% end %>
				  	</div>
						<div  class="col-xs-8">
					    <%= j.description %>
						</div>				  						  			  	
				  </div>
				  <div class="panel-footer">
				  	<%= "Posted #{ time_ago_in_words(j.created_at) } ago" %>  | ZIP: <%= j.zip_code %>
				  </div>
		    <% end %>			  
			</div>
		<% end %>

	</div>	
</div>