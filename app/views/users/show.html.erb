<div class="row">
	<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
		<%= render partial: 'layouts/profile_sidebar', locals: { member: @user } %>
	</div>
	<div class="col-lg-8 col-md-8 col-sm-6 col-xs-12">
		<%= render partial: 'layouts/profile_main', locals: { member: @user } %>


		<% @user.jobs.each do |j| %>
			<div class="panel panel-default" id="<%= j.id %>">
			  <div class="panel-heading">
			    <h3 class="panel-title">
			    	<%= j.title %> 
			    	<%= link_to j, method: :delete,
		    									 remote: true, 
			    									 data: { confirm: "Are you sure you want to delete this post?" } do %>
					  	<%= fa_icon 'minus-square lg', title: 'Delete',
					  																 class: 'pull-right delete-job' %>
				  	<% end %>	
	  			</h3>
			  </div>
			  <div class="panel-body">
			    <%= j.description %>
			  </div>
			  <div class="panel-footer"><%= "Posted #{ time_ago_in_words(j.created_at) } ago" %></div>
			</div>
		<% end %>
	</div>	
</div>