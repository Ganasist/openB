<%= simple_form_for :conversation, url: :conversations do |f| %>
  <%= f.input :recipient_ids, :as => :hidden, :input_html => { :value => @recipient_ids } %>
  <%= f.input :recipient_names, label: "Send To", :input_html => { :value => @recipient_names } %>
  <%= f.input :subject %>
  <%= f.input :body, as: :text %>
  <div class="form-actions">
    <%= f.button :submit, 'Send Message', class: 'btn-primary' %>
    <%= submit_tag 'Clear Box', type: :reset, class: 'btn btn-danger' %>    
  </div>
<% end %>

<script type="text/javascript">
    $("form.simple_form.conversation").validate({
        debug: true,
        rules: {
            "conversation[subject]": {required: true},
            "conversation[body]": {required: true}
        },
        submitHandler: function(form) {
            form.submit();
        }
    });
</script>
