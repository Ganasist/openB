<div class="row">
    <%= render 'sidebar' %>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 col-lg-10 main" id="inbox_main">
        <h1><%= conversation.subject %></h1>
        <ul>
          <%= content_tag_for(:li, conversation.receipts_for(current_member)) do |receipt| %>
            <% message = receipt.message %>    
            <p><%= message.sender.name %></p>
            <p><%= message.body %></p>
            <p>Sent <%= conversation.updated_at.strftime("%a, %m/%e/%Y %I:%M %p") %></p>
          <% end %>
        </ul>    
        <%= render 'messages/form', conversation: conversation %>
    </div>
</div>