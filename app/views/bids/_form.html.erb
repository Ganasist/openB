<% @bid = job.bids.where(contractor: current_contractor).first || job.bids.new %>

<div class="col-xs-12 text-center">
  <%= simple_form_for [job, @bid ], wrapper: :inline_form, 
                                              html: { class: 'form-inline', 
                                               autocomplete: 'off' } do |f| %>
    <%= f.error_notification %>
      <ul class="list-inline">
        <li>
          <%= f.input :cost, as: :string, 
                          label: false,
                    placeholder: '$Cost',
                     input_html: { maxlength: 5,
                                          id: 'form_zip_code' } %>
        </li>        
        <li>
          <%= f.input :duration, as: :string, 
                              label: false,
                        placeholder: 'Duration', 
                         input_html: { maxlength: 3,
                                              id: 'form_zip_code',
                                           style: 'width: 80px' } %>
        </li>
        <li>
          <%= f.input :duration_unit, selected: "#{ job.duration_unit }", 
                                         label: false, 
                                    collection: Job::DURATION_UNITS, 
                                    input_html: { style: 'width: 75px' } %>
        </li>
        <li>
          <%= f.button :submit, bid_button_text(@bid), class: bid_button_color(@bid) %>
        </li>
        <li>
          <% if @bid.persisted? %>
            <%= link_to @bid, method: :delete,
                       # remote: true, 
                         data: { confirm: 'Are you sure you want to delete this bid?' } do %>
              <%= fa_icon 'minus-square lg', title: 'Delete this bid',
                                             class: 'delete-job-post pull-right' %>
            <% end %>
          <% end %>
        </li>
        </ul>
       <hr>
  <% end %>
</div>
